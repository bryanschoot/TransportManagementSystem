@model PickOrderViewModel

<div class="container my-5">
    <div class="row">
        <div class="col-md-4">
            <div class="card mb-5">
                <div class="card-body">
                    <h5 class="card-title text-center">Pickorders</h5>
                    <hr />
                    <div class="row">
                        <div class="col">
                            <a asp-controller="PickOrder" asp-action="PickOrders"><button class="btn btn-outline-dark btn-block btn-lg">Back to pickorders</button></a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card mb-5">
                <div class="card-body">
                    <h5 class="card-title text-center">Orders</h5>
                    <hr />
                    <input class="form-control" id="myInput" type="text" placeholder="Search in pickorders..">
                    <div class="row">
                        <div class="col">
                            <div class="card-body table-responsive">
                                <table class="table table-hover table-striped">
                                    <thead>
                                        <tr>
                                            <th scope="col">Ordernr</th>
                                            <th scope="col">Description</th>
                                            <th scope="col">City</th>
                                            <th scope="col">Street</th>
                                            <th scope="col">Zip</th>
                                            <th scope="col">Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody id="myTable">
                                    @* TODO: Fix this shit plz.. From list in tabel to list in form. And then submit the form with all the added object/items. *@
                                        @if (Model != null)
                                        {
                                            foreach (var order in Model.Orders)
                                            {
                                                <tr>
                                                    <td id="order">@order.Id</td>
                                                    <td>@order.Description</td>
                                                    <td>@order.Address.City</td>
                                                    <td>@order.Address.StreetName @order.Address.StreetNumber</td>
                                                    <td>@order.Address.ZipCode</td>
                                                    <td>
                                                        <a onclick="AddOrder()">Add</a>
                                                    </td>
                                                </tr>
                                            }
                                        }
                                        else
                                        {
                                            <tr>
                                                <td colspan="6" class="text-center">You have zero orders</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                                <hr />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-8">
            @Html.Partial("_Message")
            <div class="card mb-5">
                <div class="card-body">
                    @{
                        if (Model.Id == 0)
                        {
                            <h5 class="card-title text-center">Create order</h5>
                            <hr />
                            <form asp-controller="PickOrder" asp-action="CreatePickOrder">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <button type="submit" class="btn btn-outline-dark btn-block btn-lg">Create</button>
                            </form>
                        }
                        else
                        {
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    $('#datepicker').datepicker({
        uiLibrary: 'bootstrap4'
    });
</script>

<script>
    $(document).ready(function () {
        $("#myInput").on("keyup", function () {
            var value = $(this).val().toLowerCase();
            $("#myTable tr").filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
        });
    });
</script>

<script>
    function AddOrder() {
        var id = document.getElementById('order').innerText;
        console.log(id);
        alert(id);
    }
</script>