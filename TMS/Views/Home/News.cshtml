@{
    ViewBag.Title = "title";
}

<div class="container py-5">
    <div class="row">
        <div class="col-md-4">
            <div class="card mb-5 sticky-top">
                <div class="card-body">
                    <h5 class="card-title text-center">Search articles</h5>
                    <hr/>
                        <input class="form-control mr-sm-2" id="mySearchText" type="search" placeholder="Search" aria-label="Keywords"><br/>
                        <button class="btn btn-outline-dark btn-block btn-lg" type="submit" onclick="mySearchFunction()">Search</button>
                </div>
            </div>
        </div>
        <div class="col-md-8">
            @Html.Partial("_Message")
            <div id="demo"></div>
        </div>
    </div>
</div>

<script src="~/js/news.js" type="text/javascript"></script>